<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.covid.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_country"
        android:name="com.example.covid.ui.country.CountryFragment"
        android:label="@string/title_country"
        tools:layout="@layout/fragment_country" />
    <fragment
        android:id="@+id/navigation_state"
        android:name="com.example.covid.ui.states.StatesFragment"
        android:label="@string/state"
        tools:layout="@layout/fragment_states" />
    <fragment
        android:id="@+id/navigation_dist"
        android:name="com.example.covid.ui.districts.DistFragment"
        android:label="Districts"
        tools:layout="@layout/fragment_dist" />


</navigation>